{
  "name": "backend",
  "private": true,
  "version": "1.0.0",
  "author": "duy",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && cross-env BUILD_MODE=production ./build/src/server.js",
    "dev": "cross-env BUILD_MODE=dev nodemon --exec babel-node ./src/server.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "async-exit-hook": "^2.0.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.2",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "resend": "^4.7.0",
    "streamifier": "^0.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.6",
    "@babel/core": "^7.27.6",
    "@babel/eslint-parser": "^7.27.6",
    "@babel/node": "^7.27.6",
    "@babel/plugin-transform-runtime": "^7.27.6",
    "@babel/preset-env": "^7.27.6",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.31.0",
    "nodemon": "^3.1.10"
  }
}
